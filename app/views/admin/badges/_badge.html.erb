<tr class="align-middle">
  <td><%= badge.title %></td>
  <td><%= image_tag badge.image.variant(resize_to_limit: [100, 100]) %></td>
  <td><%= badge.rule_name %></td>
  <td><%= badge.rule_value %></td>
  <td>
    <%= link_to t("admin.badges.badge.show"),
                admin_badge_path(badge),
                class: "btn btn-primary" %>
  </td>
  <td>
    <%= link_to t("admin.badges.badge.edit"),
                edit_admin_badge_path(badge),
                class: "btn btn-warning" %>
  </td>
  <td>
    <%= link_to t("admin.badges.badge.delete"),
                admin_badge_path(badge),
                data: { turbo_method: :delete,
                        turbo_confirm: t("admin.badges.badge.confirm") },
                class: "btn btn-danger" %>
  </td>
</tr>
