<h1><%= yield :title %></h1>

<%= form_with model: [:admin, @test ]  do |form| %>
  <%= render 'shared/errors', resource: @test %>

  <p>
    <%= form.label :title, t("admin.tests.form.title") %>
    <%= form.text_field :title, id: :test_title %>
  </p>

  <p>
    <%= form.label :level, t("admin.tests.form.level") %>
    <%= form.number_field :level, id: :test_level %>
  </p>

  <p>
    <%= form.label :category_id, t("admin.tests.form.category") %>
    <%= form.collection_select :category_id, Category.all, :id, :title, prompt: true %>
  </p>

  <p>
    <%= form.label :time_limit, t("admin.tests.form.time_limit") %>
    <%= form.number_field :time_limit, id: :time_limit %>
  </p>

  <p><%= form.submit t("admin.tests.form.submit") %></p>
<% end %>

<%= link_to t("admin.tests.form.back"), admin_tests_path %>