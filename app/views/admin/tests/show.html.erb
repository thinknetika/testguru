<h1>Test</h1>

<table>
  <tr>
    <td><%= @test.title %></td>
    <td><%= @test.level %></td>
    <td><%= link_to 'Edit', edit_admin_test_path(@test) %></td>
    <td><%= link_to 'Delete',
                    admin_test_path(@test),
                    data: { turbo_method: :delete,
                            turbo_confirm: 'Are you sure' } %></td>
    <td><%= link_to 'New question', new_admin_test_question_path(@test) %></td>
    <td><%= link_to 'Back', admin_tests_path %></td>
  </tr>
</table>

<%= render partial: 'admin/questions/question', collection: @test.questions %>
