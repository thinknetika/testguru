<h2><%= t("devise.form.registrations.title") %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, t("devise.form.registrations.email") %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, t("devise.form.registrations.password") %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, t("devise.form.registrations.password_confirmation") %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :first_name, t("devise.form.registrations.first_name") %><br />
    <%= f.password_field :first_name, autocomplete: "first-name" %>
  </div>

  <div class="field">
    <%= f.label :last_name, t("devise.form.registrations.last_name") %><br />
    <%= f.password_field :last_name, autocomplete: "last-name" %>
  </div>

  <div class="actions">
    <%= f.submit t("devise.form.registrations.submit") %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
