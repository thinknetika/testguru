<h2><%= t("devise.form.sessions.title") %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, t("devise.form.sessions.email") %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, t("devise.form.sessions.password") %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, t("devise.form.sessions.remember") %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit t("devise.form.sessions.submit") %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
