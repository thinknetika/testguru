<header>
  <p><%= link_to 'TestGuru', root_path %></p>

  <% if user_signed_in? %>
    <p class="nav user">
      Welcome, <b><%= current_user.email %></b> Guru
      <%= link_to 'Logout',
                  logout_path,
                  data: { turbo_method: :delete,
                          turbo_confirm: 'Are you sure' } %>
    </p>
  <% else %>
    <p>
      <%= link_to 'Login', new_user_session_path %>
      <%= link_to 'Signup', new_user_registration_path %>
    </p>
  <% end %>
</header>
