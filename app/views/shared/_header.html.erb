<header>
  <p><%= link_to 'TestGuru', root_path %></p>

  <% if user_signed_in? %>
    <p class="nav user">
      <%= t(".welcome") %> <b><%= current_user.email %></b> Guru
      <%= link_to t(".logout"),
                  destroy_user_session_path,
                  data: { turbo_method: :delete } %>
    </p>
  <% else %>
    <p>
      <%= link_to t(".login"), new_user_session_path %>
      <%= link_to t(".signup"), new_user_registration_path %>
    </p>
  <% end %>
</header>
