<h1><%= t(".title") %></h1>

<%= form_with(url: supports_path, method: :post, local: true) do |form| %>
  <div class="field">
    <%= form.label :name, t("supports.support.name"), class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :email, t("supports.support.email") %>
    <%= form.email_field :email, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :text, t("supports.support.message") %>
    <%= form.text_area :text, class: "form-control" %>
  </div>

  <%= form.submit t("supports.support.send"), class: "btn btn-primary" %>
<% end %>
