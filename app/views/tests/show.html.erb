<h1>Test</h1>

<table>
  <tr>
    <td><%= @test.title %></td>
    <td><%= test_level(@test) %></td>
    <td><%= link_to 'Edit', edit_test_path(@test) %></td>
    <td><%= link_to 'Delete',
                    test_path(@test),
                    data: { turbo_method: :delete,
                            turbo_confirm: 'Are you sure' } %></td>
    <td><%= link_to 'New question', new_test_question_path(@test) %></td>
    <td><%= link_to 'Back', tests_path %></td>
  </tr>
</table>

<table><%= render @test.questions %></table>
